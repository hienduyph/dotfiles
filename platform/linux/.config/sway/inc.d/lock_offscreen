# vim: syntax=swayconfig

exec swayidle -w \
    timeout 300 'swaylock -e -f -c 000000 -i ~/.config/lockscreen.png -t -s fill' \
    timeout 301 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000'

bindsym Mod1+l exec swayidle -w  \
	timeout 1 'swaylock -e -f -c 000000 -i ~/.config/lockscreen.png -t -s fill' \
	timeout 1 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"; pkill -nx swayidle'

